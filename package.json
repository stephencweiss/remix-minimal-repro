    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@tsconfig/bun": "^1.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.9",
    "@types/bun": "^1.0.8",
    "@types/cookie": "^0.6.0",
    "@types/eslint": "^8.56.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
